{
  "name": "webpack-base",
  "version": "0.1.0",
  "description": "Webpack boilerplate for solid javascript projects",
  "author": "Willy Brauner",
  "license": "MIT",
  "main": "src/index.ts",
  "keywords": [
    "webpack",
    "boilerplate",
    "react",
    "typescript",
    "less"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/willybrauner/webpack-base.git"
  },
  "scripts": {
    "dev": "env-cmd --no-override -f .env node config/tasks/commands.js dev",
    "build": "env-cmd --no-override -f .env.production --fallback node config/tasks/commands.js build",
    "clean": "node config/tasks/commands.js clean",
    "reset": "node config/tasks/commands.js reset",
    "scaffold": "node config/tasks/commands.js scaffold",
    "sprites": "node config/tasks/commands.js sprites",
    "setup": "node config/tasks/commands.js setup",
    "help": "node config/tasks/commands.js help",
    "prettier": "prettier --write './src/**/**/**/*.{tsx,ts,jsx,js,less,css,json,md}'",
    "test": "jest",
    "postinstall": "cp -n .env.example .env || true"
  },
  "dependencies": {
    "@solid-js/css-flat": "^1.0.1",
    "@wbe/libraries": "^1.5.0-alpha.0",
    "gsap": "^3.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^17.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@solid-js/cli": "^0.9.4",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@zouloux/files": "^0.6.0",
    "@zouloux/node-sprite-generator": "^0.12.1",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.0",
    "change-case": "^4.1.2",
    "colors": "^1.4.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^6.0.0",
    "env-cmd": "^10.1.0",
    "esbuild-loader": "^2.7.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.7",
    "fs": "0.0.2",
    "handlebars": "^4.7.6",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "husky": "^4.3.6",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-pngquant": "^9.0.1",
    "inquirer": "^7.3.3",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "less": "^3.13.0",
    "less-loader": "^7.1.0",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "postcss-loader": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "react-refresh": "^0.9.0",
    "react-test-renderer": "^17.0.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.10.3",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-merge": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,less,css,json,md}": [
      "prettier --write"
    ]
  }
}
